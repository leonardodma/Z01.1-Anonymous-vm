function Main.main 0


  push constant 55
  push constant 0
  pop temp 3
  pop temp 0

  label WHILE: 
    push constant 1
    push temp 3
    add 
    pop temp 3

    push temp 0
    push temp 3
    gt 
    if-goto WHILE


  // esse loop sempre deve existir!
  // caso contrario o computador vai
  // executar lixo de memoria.
  label while
  goto while
